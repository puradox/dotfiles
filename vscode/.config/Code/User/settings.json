        "wlan"
    ],
    "gitlens.autolinks": [
        {
            "prefix": "Change-Id: ",
            "url": "https://fxrev.dev/<num>",
            "alphanumeric": true
        },
        {
            "prefix": "fxb/",
            "url": "https://fxrev.dev/<num>",
            "alphanumeric": true
        },
        {
            "prefix": "b/",
            "url": "https://b.corp.google.com/issues/<num>",
            "alphanumeric": true
        },
    ],
}
