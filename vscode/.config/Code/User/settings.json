{
    //
    // Editor
    //

    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,

    "editor.cursorStyle": "line",
    "editor.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "none",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",

    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "window.menuBarVisibility": "toggle",

    //
    // Terminal
    //

    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["-l"]
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",

    //
    // Vim
    //

    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.joinspaces": false,
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,

    "vim.normalModeKeyBindings": [
        {
            "before": [
                "left"
            ],
            "commands": [
                "workbench.action.previousEditorInGroup"
            ]
        },
        {
            "before": [
                "right"
            ],
            "commands": [
                "workbench.action.nextEditorInGroup"
            ]
        },
        {
            "before": [
                "down"
            ],
            "commands": [
                "workbench.action.compareEditor.nextChange"
            ]
        },
        {
            "before": [
                "up"
            ],
            "commands": [
                "workbench.action.compareEditor.previousChange"
            ]
        },
        {
            "before": [
                "ctrl+n"
            ],
            "commands": [
                "workbench.action.focusSideBar"
            ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [
                "references-view.findReferences"
            ]
        },
        {
            "before": [ "g", "i" ],
            "commands": [
                "references-view.findImplementations"
            ]
        },
    ],
    "vim.handleKeys": {
        "<C-p>": false,
    },

    //
    // Git
    //

    "git.autofetch": true,
    "git.confirmSync": false,
    "git.detectSubmodules": false,
    "git.rebaseWhenSync": true,
    "gitlens.codeLens.enabled": false,

    //
    // Go
    //

    "go.formatTool": "goimports",
    "go.toolsManagement.autoUpdate": true,

    //
    // Rust
    //

    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,

    //
    // Python
    //

    "[python]": {
        "editor.formatOnType": true
    },
    "python.languageServer": "Pylance",
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.venvFolders": [
        "${workspaceFolder}/venv",
    ],
    "python.formatting.provider": "black"

    //
    // Java
    //

    "[java]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "google.g3",
        "editor.rulers": [100]
    },

    //
    // Markdown
    //

    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },

    //
    // Gn
    //

    "[gn]": {
        "editor.defaultFormatter": "MarshallOfSound.gn-format"
    },

    //
    // C++
    //

    "C_Cpp.intelliSenseEngine": "disabled",

    //
    // Google
    //
    "[bcl]": {
        "editor.defaultFormatter": "cider-team.vscode-ciderlsp"
    },
    "[starlark]": {
        "editor.defaultFormatter": "BazelBuild.vscode-bazel"
    },

    //
    // Spelling
    //

    "cSpell.enabled": true,
    "cSpell.userWords": [
