#!/usr/bin/env bash

export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/bin:$PATH"

# Golang
export PATH="$GOPATH/bin:$PATH"

# Rust
export PATH="$HOME/.cargo/bin:$PATH"

# Node.js
export PATH="$HOME/.npm-global/bin:$PATH"

# Fuchsia
export PATH="$HOME/Dev/infra/fuchsia/prebuilt/tools:$PATH"
export PATH="$HOME/fuchsia/.jiri_root/bin:$PATH"
export PATH="$HOME/.fuchsia/foxtrot:$PATH"
export PATH="$HOME/depot_tools:$PATH"
export PATH="$HOME/fuchsia-sdk/bin:$PATH"
export PATH="$HOME/fuchsia-sdk/tools/x64:$PATH"
export PATH="$HOME/fuchsia-sdk/tools:$PATH"

# Mac
if [[ $PLATFORM == "Darwin" ]]; then
	export PATH="$HOME/homebrew/bin:$PATH"
fi
